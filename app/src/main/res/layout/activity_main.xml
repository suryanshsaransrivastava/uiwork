                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="30sp"
                android:layout_marginRight="40sp"
                android:background="@color/pink_1"
                app:cardCornerRadius="20sp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DDB2B2">


                    <TextView
                        android:id="@+id/c4t1"
                        android:layout_width="wrap_content"
                        android:layout_height="52sp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8sp"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:text="Equation\nChecker"
                        android:textColor="@color/blue_dark"
                        android:textSize="20sp"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth="0.5"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.5" />

                    <ImageView
                        android:id="@+id/c4im1"
                        android:layout_width="64sp"
                        android:layout_height="64sp"
                        android:layout_marginTop="8sp"
                        android:layout_marginEnd="16dp"
                        android:foregroundGravity="center"

                        android:src="@drawable/play"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/c4im2"
                        android:layout_width="52sp"
                        android:layout_height="52sp"
                        android:layout_marginStart="32dp"


                        android:layout_marginBottom="8sp"
                        android:foregroundGravity="center"
                        android:src="@drawable/eqautions"
                        app:layout_constraintBottom_toBottomOf="parent"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/c4t1"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintWidth="0.5"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.5" />

                    <ImageView
                        android:id="@+id/c4im3"
                        android:layout_width="32sp"
                        android:layout_height="32sp"

